<% include ../partials/header %>

    <style>
        .container{
            color: black;
        }
    </style>
    <div class="container" >
        <header class="jumbotron">
            <div class="container">
                <h1> Recepient List </h1>
                <p>List of available Blood Recepient</p>
                <p>
                    <a class="btn btn-primary" href="/"> Go Back</a>
                </p>
            </div>
        </header>
        <div class="row text-center" style="display: flex; flex: wrap;">
            <% recepients.forEach(function(recepients){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="">
                        <div class="caption">
                            <h4>
                                <strong>
                                    <%= recepients.bloodgroup %>
                                </strong>
                            </h4>
                            <h5>
                                <p>
                                    <strong> <%= recepients.name %></strong>
                                </p>
                                <p><%= recepients.time %></p>
                            </h5>
                        </div>
                        <p>
                        </p>
                    </div>

                </div>
                <% }); %>
        </div>
    </div>

    <% include ../partials/footer %>